@model Asp.Net_Core_Identity.ViewModel.PasswordConfirmViewModel

@{
    ViewData["Title"] = "ResetPasswordConfirm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.status == "success")
{
    <div class="alert alert-success">

        <a href="/Home/Login/">
            Şifreniz başarılı bir şekilde değiştirilmiştir. Giriş Sayfasından yeni şifreniz ile giriş yapabilirsiniz
        </a>

    </div>
}
else
{
   <div class="row">
    <div class="col-md-4 offset-md-4">
        <h3>Yeni Şifrenizi Belirleyiniz</h3>
        <form asp-action="ResetPasswordConfirm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Yeni Şifre Oluştur" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
 
}

